#define CATCH_CONFIG_MAIN
#include "catch.hpp"
#include "SelectionSort.h"
#include <vector>

TEST_CASE("Test swap", "[swap]") {
  std::vector<int> numbers {10,20,30,40,50};
    swap(numbers,0,4);
    REQUIRE(numbers[0] == 50);
    REQUIRE(numbers[4] == 10);
    swap(numbers, 1, 2);
    REQUIRE(numbers[1] == 30);
    REQUIRE(numbers[2] == 20);
}

TEST_CASE ("Selection sort", "[selectionSort]") {
  std::vector<int> numbers {50,40,30,20,10};
  std::vector<int> sortedNumbers {10,20,30,40,50};
  std::vector<int> sortedArr {10,11,12,13};
  std::vector<int> emptyArr{};
  std::vector<int> randomArr {10,10,11,12,12,13,13,15};
  REQUIRE((numbers == sortedNumbers) == false);
  selectionSort(numbers);
  REQUIRE((numbers == sortedNumbers) == true);
  selectionSort(sortedArr);
  REQUIRE((sortedArr == sortedArr) == true);
  selectionSort(emptyArr);
  REQUIRE(emptyArr.size() == 0);
  selectionSort(randomArr);
  REQUIRE((randomArr == randomArr) == true);
}
